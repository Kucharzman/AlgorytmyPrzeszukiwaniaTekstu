        <Button x:Name="bttBF" Content="Brute Force" HorizontalAlignment="Left" Margin="125,337,0,0" VerticalAlignment="Top" Height="70" Width="200" Background="White" />

        <Button x:Name="bttKMP" Content="KMP" HorizontalAlignment="Left" Margin="372,337,0,0" VerticalAlignment="Top" Height="70" Width="200" Background="White" />

        <Button x:Name="bttBM" Content="Boyera-Moore'a" HorizontalAlignment="Left" Margin="620,337,0,0" VerticalAlignment="Top" Height="70" Width="200" Background="White" />

        <Button x:Name="bttRK" Content="Rabina-Karpa" HorizontalAlignment="Left" Margin="874,337,0,0" VerticalAlignment="Top" Height="70" Width="200" Background="White" />


    </Grid>
</Window>
